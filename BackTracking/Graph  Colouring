Algorithm mColouring(k) {
   repeat {
      NextValue(K);
      if(x[k] = 0) then 
        return ;
      if( k = n )
         write(x[1:n]);
      else 
         mColouring(k+1);
    }
  until(false);
}

 Algorithm  NextValue(k) {
   repeat {
     x[k] := (x[k] +1) mod (m+1);
     if( x[k] =0) then 
       return;
     for( j:= 1 to n ) do{
       if(( G[k,j] != 0) and (x[k] = x[j] )) then 
         break;
      if( j = n+1 ) then {
         return;
      }
      until(false);
}
}
} 
